{
  "name": "ogp-messenger",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "main": "build/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext .js,.ts,.tsx .",
    "fmt": "yarn lint --fix && prettier --write .",
    "prebuild": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build": "run-p build:*",
    "build:remix": "remix build",
    "dev": "yarn run build && run-p dev:*",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "predeploy": "yarn run build",
    "deploy": "wrangler publish",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@remix-run/cloudflare": "1.4.3",
    "@remix-run/cloudflare-workers": "1.4.3",
    "@remix-run/react": "1.4.3",
    "cross-env": "7.0.3",
    "react": "17.0.2",
    "react-copy-to-clipboard": "5.1.0",
    "react-dom": "17.0.2",
    "react-icons": "4.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.14.1",
    "@cloudflare/wrangler": "1.19.12",
    "@remix-run/dev": "1.4.3",
    "@remix-run/eslint-config": "1.4.3",
    "@types/react": "17.0.47",
    "@types/react-copy-to-clipboard": "5.0.2",
    "@types/react-dom": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "autoprefixer": "10.4.7",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-unused-imports": "2.0.0",
    "miniflare": "2.6.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.16",
    "prettier": "2.6.2",
    "tailwindcss": "3.1.8",
    "typescript": "4.6.4"
  }
}
